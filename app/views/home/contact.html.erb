<% content_for :title do %>
  <%= t :contact %>
<% end %>

<% content_for :description do %>
  <%= t :ips_desc %>
<% end %>

<% content_for :keywords do %>
  IP,high,performance,radio frequency,RF,power management,PM,data-converters,DC,AMS,IP
<% end %>

<div class="head-strip">
	<div class="container">
		<h4 class="pull-left">
  <%= t :contact_0 %>
		</h4>
		<div  class="pull-right fszs">
			<%= link_to(t(:home), {:controller => 'home', :action => 'index'}) %>
			<span>/ <%= t :contact %></span>
		</div>
	</div>
</div>
<!-- head strip end -->
<div id="contact-page">
	<div class="loction">
		<div id='map' class="pull-left">
			<div id="map-canvas" style="width: 100%; height: 600px"></div>
		</div>
		<div id="address"class="pull-right">
			<div class="fszl">
			<br />
				<h3><%= t :contact_1 %></h3>
				<br />
				<p>
					<br />
					<%= t :contact_4 %><br />
					<%= t :contact_5 %><br />
					 <%= t :contact_20 %>: <a href="mailto:info@si-vision.com"><%= t :contact_6 %></a>
					 <br />
					 <br />
					 <br />
				</p>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div id="section-left" class="col-lg-6 pull-left">
				<div id="contactus-forms">
					<p><strong class="head"><%= t :contact_11 %></strong></p>
                  <%= form_tag('', :method=>"post") do %>
                      <div class="form-group">
                        <label for="name"><%= t :contact_12 %></label>
                      	<%= text_field(:user, :name, :required => true, :class => "form-control")%>
                      </div>
                      <div class="form-group">
                        <label for='user_country'><%= t :contact_13 %></label>
                 		<select id="user_country" name='user[country]' class="form-control">
						  <option value="USA"><%= t :contact_14 %></option>
						  <option value="China"><%= t :contact_15 %></option>
						  <option value="Tiwan"><%= t :contact_16 %></option>
						  <option value="Japan"><%= t :contact_17 %></option>
						  <option value="Korea"><%= t :contact_18 %></option>
						  <option value="Egypt"><%= t :contact_19 %></option>
						  <option value="WorldWide"><%= t :contact_32 %></option>
						</select>
                      </div>

                      <div class="form-group">
                        <label for="email"><%= t :contact_20 %></label>
                        <%= email_field(:user, :email, :required => true, :class => "form-control")%>
                      </div>
                      <div class="form-group">
                        <label for="company"><%= t :contact_21 %></label>
                        <%= text_field(:user, :company, :required => true, :class => "form-control")%>
                      </div>
                      <div class="form-group">
                        <label for="message"><%= t :contact_22 %></label>
                        <%= text_area_tag(:message, "")%>
                      </div>
                      <div class="form-group">
                        <label for="ip"><%= t :contact_23 %></label>
                        <%= text_field(:user, :ip, :class => "form-control")%>
                        <p class="help-block"><%= t :contact_24 %></p>
                      </div>
                      <%= submit_tag(t(:submit), :disable_with => "Please Wait...", :class => 'btn blue-but small pull-right')%>
                  <% end %>
                  <br />&nbsp;

				</div>
			</div>

			<div id="section-right" class="col-lg-5 col-lg-offset-1 pull-right">
			</div>
		</div>
	</div>

<script>
	function initialize() {
	  var myLatlng = new google.maps.LatLng(30.092858, 31.374400);
	  var mapOptions = {
	    zoom: 16,
	    center: myLatlng,
	    mapTypeId: google.maps.MapTypeId.ROADMAP
	  }
	  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

	  var marker = new google.maps.Marker({
	      position: myLatlng,
	      map: map,
	      title: 'Silicon Vision'
	  });
	}
	google.maps.event.addDomListener(window, 'load', initialize);

  function setMapHeight(){ 
    document.getElementById("map-canvas").style.height =  document.getElementById("address").offsetHeight + "px";
  }
  window.onload = setMapHeight;
</script>

	
</div>

<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
