<% content_for :head do %>
<%= stylesheet_link_tag "main_products", :media => "all" %>
<%= stylesheet_link_tag "http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css" %>
<% end %>

<%= render "snippets/head" %>

<body class="<%= controller_name %> <%= action_name %>">

  <div class="container m50t">
    <div class="row m20b">
      <div class="col-sm-10 col-sm-offset-1">
        <div class="col-sm-2 col-3">

          <%= link_to("Silicon Vision", {:controller => 'home', :action => 'index'}, {:title => 'Go to the main website'}) %>
        </div>
        <div class="col-sm-10 col-9 text-right">
          <%= link_to(t(:contact), {:controller => 'home', :action => 'contact'}) %>
        </div>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">

        <%= render('snippets/main_products_nav') unless params[:action] == 'index' %>

        <%= render('snippets/main_products_home_nav') if params[:action] == 'index' %>

        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">

            <% unless params[:action] == 'index' %>
            <div class="main">
            <%= yield %>
            </div>
            <% end %>

          </div>
        </div>
      </div>
    </div><!-- row -->

    <div class="row hidden-sm">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="row m50t m50b">
          <div class="col-sm-3 col-4">
            <img src="/assets/main-product/bluetooth4.png">
          </div>
          <div class="col-sm-3 col-4">
            <img src="/assets/main-product/bluetooth4-1.png">
          </div>
          <div class="col-sm-3 col-4">
            <img src="/assets/main-product/bluetoothSIP.png">
          </div>
          <div class="col-sm-3 col-4">
            <img src="/assets/main-product/bluetoothSmart.png">
          </div>
        </div>
      </div>
    </div><!-- row -->



  </div><!-- container -->

</body>

</html>
